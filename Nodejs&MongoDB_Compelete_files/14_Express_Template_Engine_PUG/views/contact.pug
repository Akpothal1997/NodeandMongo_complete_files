                    option(value='Sr. Software Engineer') Sr. Software Engineer
                    option(value='Tech Lead') Tech Lead
                    option(value='Asst. Project Manager') Asst. Project Manager
                    option(value='Project Manager') Project Manager
                    option(value='Sr. Project Manager') Sr. Project Manager
                .form-group
                  input.form-control(type='text' placeholder='address' name='address')
                .form-group
                  textarea.form-control(placeholder='About Yourself' rows='4' name='description')
